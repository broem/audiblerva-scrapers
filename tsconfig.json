{
  "compileOnSave": false,
  "include": [
    "./src/*.ts",
    "./src/*.json"
  ],
  "exclude": [
    "node_modules"
  ],
  
  "compilerOptions": {
    "lib": ["es6"],        
    "types": ["node"],
    "target": "es6", 
    "pretty": true,
    "module": "commonjs",    
    "outDir": "./dist",
    "sourceMap": true,    
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,  
    "typeRoots": [
      "./node_modules/@types",
      "./type_overrides/"
    ],
    "skipLibCheck":true //temp: until issue fixed. see: https://github.com/DefinitelyTyped/DefinitelyTyped/issues/24419
  }
}